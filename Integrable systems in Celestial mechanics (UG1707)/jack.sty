% THERMAL PHYSICS

%rank 2 tensor underline
\def\doubleunderline#1{\underline{\underline{#1}}}

%vector and mod
\def\vec#1{\underline{#1}}
\def\mod#1{|{#1}|}

%usefull tensors 

\newcommand\id{\doubleunderline{\delta} }
\newcommand\E{\doubleunderline{E} \ }
\newcommand\Qt{\doubleunderline{Q} \ }

% Def equals
\newcommand{\defequal}{:=}

% Partial derivative
\newcommand\pd[2]{\displaystyle\frac{\partial #1}{\partial #2}}

% Second partial derivative
\newcommand\pdtwo[2]{\displaystyle\frac{\partial^2 #1}{\partial #2^2}}

% one half
\newcommand\half[0]{\displaystyle\frac{1}{2}}

% one third
\newcommand\third[0]{\displaystyle\frac{1}{3}}

% one quarter
\newcommand\quarter[0]{\displaystyle\frac{1}{4}}

% exp with brackets that autosize
\newcommand\expB[1]{\displaystyle\exp{\left( #1 \right)}}

% Log with brackets that autosize
\newcommand\LogB[1]{\displaystyle\Log{\left( #1 \right)}}

% log with brackets that autosize
\newcommand\logB[1]{\displaystyle\operatorname{log}{\left( #1 \right)}}

% Arg with brackets that autosize
\newcommand\ArgB[1]{\displaystyle\operatorname{Arg}{\left( #1 \right)}}

% arg with brackets that autosize
\newcommand\argB[1]{\displaystyle\operatorname{arg}{\left( #1 \right)}}

% Total derivative
\newcommand\td[2]{\displaystyle\frac{d #1}{d #2}} 

% Hat
\newcommand\h[1]{\displaystyle\hat{#1}}

